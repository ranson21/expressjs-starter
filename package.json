{
  "name": "expressjs-starter",
  "version": "1.0.0",
  "description": "",
  "main": "build/main.js",
  "scripts": {
    "test": "jest",
    "setup": "./scripts/setup.sh",
    "start": "source .env && backpack",
    "build": "backpack build",
    "clean": "./scripts/clean.sh",
    "docker": "docker run -p 4000:4000 -d $IMAGE_NAME",
    "docker:build": "source .env && docker build --network host -t $IMAGE_NAME .",
    "docker:push": "docker push $IMAGE_NAME"
  },
  "author": "Abigail Ranson",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.16.12",
    "@babel/node": "^7.16.8",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.2",
    "express-jwt": "^6.1.0",
    "express-winston": "^4.2.0",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babel-jest": "^27.4.6",
    "backpack-core": "^0.8.4",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^25.0.0",
    "jest-express": "^1.12.0",
    "lint-staged": "^12.3.1",
    "prettier": "^1.18.2",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
